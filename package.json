{
  "name": "apatejs-retro",
  "version": "1.0.0",
  "description": "A simple 2D retro game engine which runs directly in your browser",
  "main": "dist/apate.js",
  "typings": "dist/apate.d.ts",
  "scripts": {
    "build": "rimraf dist/ && rollup --config rollup.config.js",
    "build/dev": "rollup --config rollup.config.js --environment BUILD:development",
    "clean": "rimraf dist/",
    "dev": "nodemon --config nodemon.json",
    "test": "eslint src/**/*.ts && prettier src/**/*.ts --check",
    "format": "prettier src/**/*.ts --write"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/juiian7/ApateJS-Retro.git"
  },
  "author": "juiian7",
  "license": "GPL-3.0",
  "devDependencies": {
    "@rollup/plugin-typescript": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "eslint": "^8.9.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.68.0",
    "rollup-plugin-dts": "^4.1.0",
    "typescript": "4.4.4"
  },
  "prettier": {
    "singleQuote": false,
    "tabWidth": 4,
    "printWidth": 180,
    "trailingComma": "es5",
    "endOfLine": "auto"
  }
}
